{
  "name": "parcel-inferno",
  "license": "MIT",
  "scripts": {
    "build": "parcel build app/index.html --no-source-maps --public-url .",
    "rebuild": "rm -rf .clean dist && yarn build --no-cache",
    "serve": "parcel app/index.html --open",
    "lint": "eslint app/**/*.js app/**/*.vue",
    "esw": "esw ./app --ext .js --ext .vue -w --color --clear",
    "test": "jasmine"
  },
  "dependencies": {
    "inferno": "^7.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/plugin-transform-runtime": "^7.8.0",
    "@babel/preset-env": "^7.8.2",
    "babel-plugin-inferno": "^6.1.0",
    "parcel": "^1.12.4",
    "parcel-plugin-compress": "^1.1.0",
    "parcel-plugin-inliner": "^1.0.6",
    "postcss-remove-unused-css": "^1.0.4"
  },
  "optionalDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.0",
    "eslint-watch": "^6.0.1",
    "jasmine": "^3.5.0"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "inferno"
    ]
  },
  "browserslist": [
    "> 0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-remove-unused-css": {
        "path": "./app",
        "exts": [
          ".js",
          ".svelte",
          ".html"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended",
      "plugin:jest/recommended",
      "airbnb-base",
      "plugin:react/recommended"
    ],
    "plugins": [
      "promise",
      "no-loops",
      "jest"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "globals": {
      "document": true
    },
    "settings": {
      "react": {
        "pragma": "m"
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "react/no-deprecated": "off"
    }
  }
}
