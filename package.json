{
  "name": "parcel-inferno",
  "license": "MIT",
  "scripts": {
    "build": "parcel build app/index.html --public-url .",
    "rebuild": "parcel build app/index.html --no-cache --public-url .",
    "serve": "parcel app/index.html --open",
    "lint": "eslint app/**/*.js app/**/*.vue",
    "esw": "esw ./app --ext .js --ext .vue -w --color --clear",
    "test": "jest"
  },
  "dependencies": {
    "inferno": "^5.1.1"
  },
  "devDependencies": {
    "babel-plugin-inferno": "^5.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "parcel": "^1.9.2"
  },
  "optionalDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.9.1",
    "eslint-watch": "^3.1.5",
    "jest": "^23.1.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-runtime",
      "inferno"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 8 versions",
    "ie 9"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended",
      "plugin:jest/recommended",
      "airbnb-base",
      "plugin:react/recommended"
    ],
    "plugins": [
      "promise",
      "no-loops",
      "jest"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "globals": {
      "document": true
    },
    "settings": {
      "react": {
        "pragma": "m"
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "react/no-deprecated": "off"
    }
  }
}
