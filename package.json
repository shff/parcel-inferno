{
  "name": "parcel-inferno",
  "license": "MIT",
  "scripts": {
    "build": "parcel build app/index.html --public-url .",
    "rebuild": "parcel build app/index.html --no-cache --public-url .",
    "serve": "parcel app/index.html --open",
    "lint": "eslint app/**/*.js app/**/*.vue",
    "esw": "esw ./app --ext .js --ext .vue -w --color --clear",
    "test": "jest"
  },
  "dependencies": {
    "inferno": "^7.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "babel-plugin-inferno": "^6.0.4",
    "parcel": "^1.9.3"
  },
  "optionalDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.10.0",
    "eslint-watch": "^4.0.0",
    "jest": "^24.1.0"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "inferno"
    ]
  },
  "browserslist": [
    "> 0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended",
      "plugin:jest/recommended",
      "airbnb-base",
      "plugin:react/recommended"
    ],
    "plugins": [
      "promise",
      "no-loops",
      "jest"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "globals": {
      "document": true
    },
    "settings": {
      "react": {
        "pragma": "m"
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "react/no-deprecated": "off"
    }
  }
}
